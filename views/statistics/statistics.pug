extends ../layouts/layout_noheader
block layout-content
  - let addresses = [1,2,8]
  - let counter = [9,5,6]
  .chart-wrapper(style='height:200px;')
    h2 Customer Address Scatter
    canvas#main-chart.chart(height='100')
  .chart-wrapper(style='height:600px;margin-top:100px;')
    canvas#main-chart.chart(height='100')
  script(src='https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js')
  script.
    var ctx = document.getElementById("main-chart").getContext('2d');
    var myChart = new Chart(ctx, {
    type: 'line',
    data: {
    labels: !{JSON.stringify(addresses)},
    datasets: [{
    label: 'Customer Address',
    data: !{JSON.stringify(counter)},
    backgroundColor: [
    'rgba(255, 99, 132, 0.2)',
    'rgba(54, 162, 235, 0.2)',
    'rgba(255, 206, 86, 0.2)',
    'rgba(75, 192, 192, 0.2)',
    'rgba(153, 102, 255, 0.2)',
    'rgba(255, 159, 64, 0.2)'
    ],
    borderColor: [
    'rgba(255,99,132,1)',
    'rgba(54, 162, 235, 1)',
    'rgba(255, 206, 86, 1)',
    'rgba(75, 192, 192, 1)',
    'rgba(153, 102, 255, 1)',
    'rgba(255, 159, 64, 1)'
    ],
    borderWidth: 1
    }]
    },
    options: {
    scales: {
    yAxes: [{
    ticks: {
    beginAtZero: true
    }
    }]
    }
    }
    });
  