extends ../layouts/layout_noheader
block layout-content
  h1 Delete
  h3 Are you sure you want to delete this?
  div
    h4 Supplier
    .1row
      .col-md-4
        label(for='fname') SupplierName
        input#SupplierName(type='text' name='fname' value=suppliers_test[0].SupplierName)
        br
        br
        label(for='lname') SupplierPhoneNumber
        input#SupplierPhoneNumber(type='text' name='lname' value=suppliers_test[0].SupplierPhoneNumber)
        br
        br
        label(for='lname') SupplierID
        input#SupplierID(type='text' name='lname' value=suppliers_test[0].SupplierID)
        br
        br
        input#btn.Create.btn.btn-primary(type='button' value='Delete')
  script.
    $('#btn').click(function () {
    var elmId = $(this).attr("id");
    send($('#SupplierID').val());
    });
    function send() {
    $.post("/delete_supplier", { id: $('#SupplierID').val()}, function (data) {
    $("#maindiv").html(data);
    });
    }  