<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <link rel="stylesheet" href="css/main.css">


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://site-assets.fontawesome.com/releases/v6.2.0/css/all.css">
</head>
<body>
    <nav id="nevbar">
        <div id="nev_left">
            <div id="logo">
                <div id="logo_name">ALIZAPPA</div>
                <div id="logo_copyright">Â© 2022 - AliZappa</div>
            </div>
            <a href="shops"><div class="nev_item">Shops</div></a>
            <a href="guitars"><div class="nev_item">Guitars</div></a>
            <a href="phones"><div class="nev_item">Phones</div></a>
            <a href="tvs"><div class="nev_item">Tvs</div></a>
        </div>
        <div id="register_shop_btn" onclick="$('#exampleModal').modal('show')">Register Tv</div>
    </nav>
    <footer id="content">
        <div id="shop_list">
            <header id="shop_list_headline">Tvs</header>
            <div id="shop_list_search_closed">
                <div id="search_top">
                    <div id="search_headline">Search Options:</div>
                    <i id="toggle_search_box_icon" class="fa-light fa-down" onclick="open_shop_list_search()"></i>
                </div>
                <form id="search_form" method="get" action="/searchTv">
                    <div class="search_item">
                        <div>
                            <i class="fa-light fa-tv"></i>
                        </div>
                        <input name="tv_name" type="text" placeholder="Tv name">
                    </div>
                    <div class="search_item">
                        <div>
                            <i class="fa-light fa-circle-info"></i>
                        </div>
                        <input name="manufacturer" type="text" placeholder="Phone manufacturer">
                    </div>
                    <div class="search_item">
                        <div>
                            <i class="fa-light fa-location-dot"></i>
                        </div>
                        <input name="minPrice" type="number" min=0 placeholder="Phone minimum price">
                    </div>
                    <button>Search</button>
                </form>
            </div>
            <section id="shop_list_content">
            <%for (var i = 0; i < tvs.length; i++) {%>
                <!-- <%=tvs[i]._id%> -->
                    <div class="shop_box" onclick="selectTv('<%=tvs[i].name%>','<%=tvs[i].manufacturer%>','<%=tvs[i].inch%>','<%=tvs[i].price%>','<%=tvs[i]._id%>')">
                    <div class="shop_data">
                        <div>
                            <div class="shop_name">
                                <%=tvs[i].name%>
                            </div>
                            <div class="shop_type">
                                <i class="fa-light fa-screwdriver-wrench" id="shop_type_icon"></i>
                                <%=tvs[i].manufacturer%>
                            </div>
                        </div>
                        
                        <div class="shop_info">
                            <%=tvs[i].price%>
                            <i class="fa-light fa-dollar-sign" class="shop_type_icon_tag"></i>
                        </div>
                    </div>
                </div>
            <%}%>
            </section>
        </div>
        <aside id="mainshop_box">
            <div style="display: flex;">
                <div id="mainshop_headline">Selected Tv Name</div>
                <% if(isAdmin == true){ %>
                    <a href="#" id="adminEdit">edit</a>
                <% } %>
            </div>
            <div id="mainshop_content_box">
                <div id="mainshop_content_top">
                    <div id="mainshop_content_data">
                        <div class="mainshop_content_item">
                            <div>
                                <i class="fa-light fa-tv"></i>
                            </div>
                            <div class="mainshop_content_text" id="mainguitar_content_item_name">Selected Tv Name</div>
                        </div>
                        <div class="mainshop_content_item">
                            <div>
                                <i class="fa-light fa-circle-info"></i>
                            </div>
                            <div class="mainshop_content_text" id="mainguitar_content_item_manufacturer">Selected Tv Manufacturer</div>
                        </div>
                        <div class="mainshop_content_item">
                            <div>
                                <i class="fa-light fa-expand"></i>
                            </div>
                            <div class="mainshop_content_text" id="mainguitar_content_item_inch">Selected Tv inch</div>
                        </div>
                        <div class="mainshop_content_item">
                            <div>
                                <i class="fa-light fa-dollar-sign"></i>
                            </div>
                            <div class="mainshop_content_text" id="mainguitar_content_item_price">Selected Tv Price</div>
                        </div>
                    </div>
                </div>
                <div></div>
            </div>
        </aside>
    </footer>





    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5>Register Tv,</h5>
                </div>
                <div class="modal-body">
                    <form method="post" action="/registerTv">
                        <div class="register_item">
                            <div>
                                <i class="fa-light fa-tv"></i>
                            </div>
                            <input required name="name" type="text" placeholder="Tv name">
                        </div>
                        <div class="register_item">
                            <div>
                                <i class="fa-light fa-circle-info"></i>
                            </div>
                            <input name="manufacturer" type="text" placeholder="Manufacturer">
                        </div>
                        <div class="register_item">
                            <div>
                                <i class="fa-light fa-expand"></i>
                            </div>
                            <input name="inch" type="number" min=0 placeholder="Tv inch">
                        </div>
                        <div class="register_item">
                            <div>
                                <i class="fa-light fa-dollar-sign"></i>
                            </div>
                            <input required name="price" type="number" min=0 placeholder="Price">
                        </div>
                        <button id="register_button" type="submit" class="btn btn-primary">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
    crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.1.js" integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI="
      crossorigin="anonymous"></script>
    <script src="js/shops.js"></script>
</body>
</html>
